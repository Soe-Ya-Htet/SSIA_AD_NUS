@model SSISTeam9.Models.RequisitionDetails
@using SSISTeam9.Models
@{
    var requisitionDetails = (List<RequisitionDetails>)ViewData["requisitionDetails"];
    var reqId = (long)ViewData["reqId"];
    var appStatus = "Approved";
    var rejStatus = "Rejected";
    string sessionId = (string)ViewData["sessionId"];
    bool isRep = (bool)ViewData["isRep"];
}

Requisition ID : @reqId
@{
    <form method="post">
        <table class="table table-bordered">
            <tr>
                <th>Description</th>
                <th>UnitOfMeasure</th>
                <th>Quantity</th>
            </tr>

            @foreach (var detail in requisitionDetails)
            {
                <tr>

                    <td>@detail.Item.Description</td>
                    <td>@detail.Item.UnitOfMeasure</td>
                    <td>@detail.Quantity</td>
                </tr>
            }
        <tr>
            <td></td>
            <td><button class="rounded" type="submit" id=reqId formaction="/Requisition/ProcessRequisition?reqId=@reqId&status=@rejStatus&sessionId=@sessionId"><span>Reject</span></button></td>
            <td><button class="rounded" type="submit" id=reqId formaction="/Requisition/ProcessRequisition?reqId=@reqId&status=@appStatus&sessionId=@sessionId"><span>Approve</span></button></td>
            <td><button class="rounded" type="submit" id=reqId formaction="/Requisition/Reorder?reqId=@reqId&sessionId=@sessionId"><span>Reorder</span></button></td>
        </tr>
        </table>
    </form>

}