@using SSISTeam9.Models;
@{
    List<Inventory> catalogues = (List<Inventory>)ViewData["catalogues"];
}

<h2 style="text-align:center">Catalogues List</h2>

@if (catalogues.Count == 0)
{
    <br /><br />
    <p style="font-size:14px">No catalogues to display</p>
}
else
{
        <p style="text-align:center">
            <input type="button" value="Create New Supplier" style="background-color:forestgreen; color:white" onclick="location.href='@Url.Action("Create","Catalogue")'">
        </p>
        <table align="center">
            <tr align="center">
                <th>Item Number</th>
                <th>Category</th>
                <th>Description</th>
                <th>Unit Of Measure</th>
            </tr>
            @foreach (var c in catalogues)
            {
                <tr  align="center">
                    <td><a href="/Catalogue/Details?itemId=@c.ItemId">@c.ItemCode </a></td>
                    <td>@c.Category</td>
                    <td>@c.Description</td>
                    <td>@c.UnitOfMeasure</td>
                    <td>
                        @Html.Hidden("supplierId", c.ItemId)
                    </td>
                </tr>
            }
        </table>
        }

