@model SSISTeam9.Models.PriceList

@{
    List<string> supplierNames = (List<string>)ViewData["supplierNames"];
    List<string> unitsOfMeasure = (List<string>)ViewData["unitsOfMeasure"];
}

<h2>Create New Department</h2>

<div>
    @using (Html.BeginForm("CreateNew", "Catalogue", FormMethod.Post))
    {
        <table>
            <tr>
                <td>@Html.LabelFor(x => x.Item.ItemCode) </td>
                <td>@Html.TextBoxFor(x => x.Item.ItemCode, new { id = "item.itemCode", @class = "TextBox"  })</td>
                <td>@Html.ValidationMessageFor(x => x.Item.ItemCode, "", new { style = "color:red" })</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(x => x.Item.Category) </td>
                <td>@Html.TextBoxFor(x => x.Item.Category, new { id = "category", @class = "TextBox" })</td>
                <td>@Html.ValidationMessageFor(x => x.Item.Category, "", new { style = "color:red" })</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(x => x.Item.Description) </td>
                <td>@Html.TextBoxFor(x => x.Item.Description, new { id = "description", @class = "TextBox" })</td>
                <td>@Html.ValidationMessageFor(x => x.Item.Description, "", new { style = "color:red" })</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(x => x.Item.UnitOfMeasure) </td>
                <td>
                    <div>
                        <select name="unitOfMeasure" id="unitOfMeasure" class="TextBox">
                            @foreach (string unitOfMeasure in unitsOfMeasure)
                            {
                                <option>@unitOfMeasure</option>
                            }
                        </select>
                    </div>
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(x => x.Supplier1Name) </td>
                <td>
                    <div>
                        <select name="supplier1Name" id="supplier1Name" class="TextBox">
                            @foreach (string supplierName in supplierNames)
                            {
                                <option>@supplierName</option>
                            }
                        </select>
                    </div>
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(x => x.Supplier2Name) </td>
                <td>
                    <div>
                        <select name="supplier2Name" id="supplier2Name" class="TextBox">
                            @foreach (string supplierName in supplierNames)
                            {
                                <option>@supplierName</option>
                            }
                        </select>
                    </div>
                </td>
            <tr>
                <td>@Html.LabelFor(x => x.Supplier3Name) </td>
                <td>
                    <div>
                        <select name="supplier3Name" id="supplier3Name" class="TextBox">
                            @foreach (string supplierName in supplierNames)
                            {
                                <option>@supplierName</option>
                            }
                        </select>
                    </div>
                </td>
            </tr>
            <tr>
                <td></td>
                <td align="right"><input type="submit" value="Save Create" style="background-color:green;color:white;"></td>
            </tr>
        </table>


    }

</div>

@Html.Raw(TempData["errorMsg"])

<style>
    td {
        padding: 2px;
    }

    tr {
        height: 40px;
        padding: 2px;
    }
    .TextBox{
        width: 250px;
    }
</style>