@model SSISTeam9.Models.PurchaseOrder

@using SSISTeam9.Models;
@{
    PurchaseOrder order = (PurchaseOrder)ViewData["order"];
    var counter = 0;
}

<h2>Purchase Order</h2>

<table>
    <tr>
        <td colspan="2">PO Number: </td>
        <td colspan="2">@order.OrderNumber</td>
    </tr>
    <tr>
        <td colspan="2">Deliver To: </td>
        <td colspan="2"><input type="text" value="@order.DeliverTo" style="height:100px; width:350px"></td>
    </tr>
    <tr>
        <td colspan="2">To Supply Items By: </td>
        <td colspan="2"><input type="date" value="@order.DeliverBy.Date.ToString("yyyy-MM-dd")"></td>
    </tr>
</table>

<div>
    @using (Html.BeginForm("ChooseSuppliers", "PurchaseOrder", FormMethod.Post))
    {
    <table>
        <tr>
            <th>Change Supplier (?)</th>
            <th>Item Number</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Unit Price ($)</th>
            <th>Total ($)</th>
        </tr>

        @foreach (var item in order.ItemDetails)
        {
        <tr>
            <td>@Html.CheckBoxFor(m => m.ItemDetails[counter].Item.isChecked, new { id = "selectedChangeSupplier" })</td>
            @Html.Hidden("orderNumber",order.OrderNumber)
            <td>@item.Item.ItemCode</td>
            <td>@item.Item.Description</td>
            <td>@item.Quantity</td>

            <!--To check what is the supplier for the current Purchase Order-->
            @if (order.SupplierId == long.Parse(@item.ItemSuppliersDetails.Supplier1Id))
            {
                <td>@item.ItemSuppliersDetails.Supplier1UnitPrice</td>
            }
            else if (order.SupplierId == long.Parse(@item.ItemSuppliersDetails.Supplier2Id))
            {
                <td>@item.ItemSuppliersDetails.Supplier2UnitPrice</td>
            }
            else if (order.SupplierId == long.Parse(@item.ItemSuppliersDetails.Supplier3Id))
            {
                <td>@item.ItemSuppliersDetails.Supplier3UnitPrice</td>
            }

            @if (order.SupplierId == long.Parse(@item.ItemSuppliersDetails.Supplier1Id))
            {
                <td>@(item.Quantity * Convert.ToDouble(item.ItemSuppliersDetails.Supplier1UnitPrice))</td>
            }
            else if (order.SupplierId == long.Parse(@item.ItemSuppliersDetails.Supplier2Id))
            {
                <td>@(item.Quantity * Convert.ToDouble(item.ItemSuppliersDetails.Supplier2UnitPrice))</td>
            }
            else if (order.SupplierId == long.Parse(@item.ItemSuppliersDetails.Supplier3Id))
            {
                <td>@(item.Quantity * Convert.ToDouble(item.ItemSuppliersDetails.Supplier3UnitPrice))</td>
            }
        </tr>
            counter = counter + 1;
        }

        <tr>
            <td colspan="6" align="right"><input type="submit" value="Change Supplier For Items"></td>
        </tr>
        <tr>
            <td colspan="6" align="right"><input type="submit" value="Delete PO"></td>
        </tr>
    </table>
    }
</div>


<style>
    td {
        padding: 2px;
    }

    tr {
        height: 40px;
        padding: 2px;
    }
</style>

