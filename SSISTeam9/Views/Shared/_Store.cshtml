@{
    string sessionId = (string)ViewData["sessionId"];
}

<!-- Fixed navbar -->
<link href="~/Content/sticky-footer-navbar.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Muli&display=swap" rel="stylesheet">
<header style="padding-bottom: 30px;">
    <nav class="strnavbar navbar navbar-expand-md navbar-dark fixed-top">

        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @Html.ActionLink("Requisitions", "ViewAllRequisitionsByStatus", "Requisition", new { sessionId = sessionId }, new { @class = "nav-link" })
                </li>
                <li class="dropdown active">
                    <a class="dropdown-toggle nav-link" data-toggle="dropdown" href="#">
                        Disbursements
                        <span class="caret"></span>
                    </a>
                    <ul style="background-color:black" class="dropdown-menu">
                        <li>@Html.ActionLink("Pending Disbursement lists", "ViewAllDisbursements", "Disbursement", new { sessionId = sessionId }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Completed Disbursement lists",  "ViewAllCompletedDisbursements", "Disbursement", new { sessionId = sessionId }, new { @class = "nav-link" })</li>
                    </ul>
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Inventory", "Check", "Stock", new { sessionId = sessionId }, new { @class = "nav-link" })
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Stock", "All", "Stock", new { sessionId = sessionId }, new { @class = "nav-link" })
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Purchase Orders", "All", "PurchaseOrder", new { sessionId = sessionId }, new { @class = "nav-link" })
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Analytics", "Home", "Analytics", new { sessionId = sessionId }, new { @class = "nav-link" })
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Catalogue", "All", "Catalogue", new { sessionId = sessionId }, new { @class = "nav-link" })
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Suppliers", "All", "Supplier", new { sessionId = sessionId }, new { @class = "nav-link" })
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Departments", "All", "Department", new { sessionId = sessionId }, new { @class = "nav-link" })
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Charge Back", "Select", "ChargeBack", new { sessionId = sessionId }, new { @class = "nav-link" })
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Adjustment Vouchers", "Index", "AdjVoucher", new { sessionId = sessionId }, new { @class = "nav-link" })
                </li>
            </ul>
            <ul class="navbar-nav mt-2 mt-md-0">
                <li class="nav-item active">
                    <img src="~/Content/homeicon.png" width="20" height="20" style="margin-top:10px" onclick="location.href ='@Url.Action("All", "Home", new { sessionId = sessionId })'" />
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Logout", "Logout", "Home", new { sessionId = sessionId }, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>
</header>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<style>
    body {
        font-family: 'Muli', sans-serif;
    }
</style>