@model IEnumerable<SSISTeam9.Models.Inventory>
@using SSISTeam9.Models;

@{
    ViewBag.Title = "NewRequisition";
    Employee e = (Employee)ViewData["emp"];
    string sessionId = (string)ViewData["sessionId"];
    bool isRep = (bool)ViewData["isRep"];

}

<link href="~/Content/sticky-footer-navbar.css" rel="stylesheet">
<header style="padding-bottom: 30px;">
    <!-- Fixed navbar -->
    <nav class="navbar navbar-expand-md navbar-dark fixed-top" >

        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @Html.ActionLink("New Requisition", "NewRequisition", "Requisition", new { sessionId = sessionId }, new { @class = "nav-link" })
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Requisition List", "RequisitionList", "Requisition", new { sessionId = sessionId }, new { @class = "nav-link" })
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("My Requisition", "MyRequisition", "Requisition", new { sessionId = sessionId }, new { @class = "nav-link" })
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Department Requisition", "DeptRequisition", "Requisition", new { sessionId = sessionId }, new { @class = "nav-link" })
                </li>
                @if (isRep)
                {
                    <li class="nav-item active">
                        @Html.ActionLink("Disbursement List", "RepDisbursementList", "Disbursement", new { sessionId = sessionId }, new { @class = "nav-link" })
                    </li>
                }
            </ul>
            <ul class="navbar-nav mt-2 mt-md-0">
                <li class="nav-item active">
                    @Html.ActionLink("Logout", "Logout", "Home", new { sessionId = sessionId }, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>
</header>

<h2>New Requisition</h2>
<hr/>
<section class="products">

    @foreach (var item in Model)
    {
        <div class="product-card">
            <div class="product-info">
                <center><img style="width: 150px; height:100px" src="" /></center>
                <h5 style="text-align:center">@item.Description</h5>
                <h6 style="text-align:center; width:200px">@item.UnitOfMeasure</h6>
                <form style="text-align:center" method="post">
                    <input type="submit" value="Add to Cart" formaction="/Requisition/AddtoCart?itemId=@item.ItemId&sessionId=@sessionId">
                    <input type="submit" value="Remove from cart" formaction="/Gallery/RemovefromCart?productId=@item.ItemId">
                    <input type="hidden" value="Empty cart" formaction="/Gallery/EmptyCart?productId=@item.ItemId">
                </form>
            </div>
        </div>
    }
</section>

<style>
    td, tr {
        padding: 2px;
    }

    .button {
        border: none;
        padding: 10px 24px;
        text-align: center;
        display: inline-block;
        width: 250px;
    }

    .products {
        display: flex;
        flex-wrap: wrap;
    }

    .product-card {
        padding: 2%;
        flex-grow: 1;
        flex-basis: 27%;
        display: flex;
    }

    .product-info {
        margin-top: auto;
    }
</style>

