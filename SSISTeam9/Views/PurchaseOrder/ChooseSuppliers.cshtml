@model SSISTeam9.Models.PurchaseOrder

@using SSISTeam9.Models;
@{
    ViewBag.Title = "Choose Suppliers";
    List <Inventory> selectedItems = (List<Inventory>)ViewData["selectedItems"];
    PurchaseOrder selectedOrder = (PurchaseOrder)ViewData["selectedOrder"];
}

<h2>Choose Alternative Suppliers</h2>

<div>
    @using (Html.BeginForm("ChooseSuppliers", "PurchaseOrder", FormMethod.Post))
    {
    <table>
        <tr>
            <th>Change Supplier To</th>
            <th>Item Number</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Unit Price ($)</th>
        </tr>

        @foreach (var item in selectedItems)
        {
        <tr>
            @if (selectedOrder.SupplierId == long.Parse(item.ItemSuppliersDetails.Supplier1Id))
            {
                <td>
                    <select name="alt_supplier">
                        <option value="@item.ItemSuppliersDetails.Supplier2Name"></option>
                        <option value="@item.ItemSuppliersDetails.Supplier3Name"></option>
                    </select>
                </td>
            }

        </tr>

        }
        <tr>
            <td colspan="6" align="right"><input type="submit" value="Confirm Changes"></td>
        </tr>
    </table>

    }
</div>

<style>
    td {
        padding: 2px;
        width: 200px;
    }

    tr {
        height: 40px;
        padding: 2px;
        text-align: center;
    }

    th {
        text-align: center;
    }
</style>

