@model List<SSISTeam9.Models.AdjVoucher>

@using (Html.BeginForm("Generate", "AdjVoucher", Model, FormMethod.Post))
{
    <table class="table table-bordered">

        <thead>
        <tr align="center">
            <th>Item Code</th>
            <th>Description</th>
            <th>Quantity Adjusted</th>
            <th>Reason</th>
            <th>Unit Price</th>
            <th>Total Price</th>
        </tr>

        </thead>

        <tbody>

        @if (Model != null)
        {
            for (var i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Html.DisplayFor(x => Model[i].Item.ItemCode)</td>
                    <td>@Html.DisplayFor(x => Model[i].Item.Description)</td>

                    <td>@Html.DisplayFor(x => Model[i].AdjQty)</td>
                    <td>@Html.TextBoxFor(x => Model[i].Reason)</td>
                    <td>@Model[i].Item.ItemSuppliersDetails.Supplier1UnitPrice / @Model[i].Item.UnitOfMeasure</td>
                    <td>@Html.DisplayFor(x => Model[i].TotalPrice)</td>
                    @Html.HiddenFor(x => Model[i].Item.ItemCode)
                    @Html.HiddenFor(x => Model[i].Item.ItemId)
                    @Html.HiddenFor(x => Model[i].AdjQty)
                    @Html.HiddenFor(x => Model[i].Item.Description)
                    @Html.HiddenFor(x => Model[i].TotalPrice)
                </tr>
            }
        }

        </tbody>


    </table>
    <input type="submit" value="Generate Adjustment Voucher"/>
}