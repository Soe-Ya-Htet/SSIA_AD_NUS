@{
    Layout = "~/Views/Shared/_Store.cshtml";
    ViewBag.Title = "Home";
    List<string> analytics = (List<string>)ViewData["analytics"];

    string sessionId = (string)ViewData["sessionId"];
}

<h2>Analytics</h2>

<div>
    @using (Html.BeginForm("Redirect", "Analytics", routeValues: new { sessionid = sessionId}, method: FormMethod.Post))
    {
        <label for="analytic">Select: </label>
        <select id="analytic" name="analytic">
            @foreach (var analytic in analytics)
            {
                <option value="@analytic">@analytic</option>
            }
        </select>
        <input type="hidden" name="sessionId" value="@sessionId" />
        <input class="rounded" type="submit" value="Generate" />
    }

</div>



